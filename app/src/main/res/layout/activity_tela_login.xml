<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:gravity="center">

    <TextView
        android:id="@+id/txtSweccaHome"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="SWECCA"
        android:textSize="60sp"
        android:textColor="#1E90FF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/edtTxtNome"
        android:layout_alignLeft="@+id/edtTxtNome"
        android:layout_alignStart="@+id/edtTxtNome" />

    <EditText
        android:id="@+id/edtTxtNome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="UsuÃ¡rio"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edtTxtSenha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/edtTxtNome"
        android:layout_alignLeft="@+id/edtTxtNome"
        android:layout_alignStart="@+id/edtTxtNome"
        android:hint="Senha"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnAcessar"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Acessar"
        android:textColor="@android:color/white"
        android:layout_marginTop="21dp"
        android:background="#1E90FF"
        android:layout_below="@+id/edtTxtSenha"
        android:layout_alignLeft="@+id/edtTxtSenha"
        android:layout_alignStart="@+id/edtTxtSenha"
        android:layout_alignRight="@+id/edtTxtSenha"
        android:layout_alignEnd="@+id/edtTxtSenha" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:textColor="@android:color/white"
        android:background="#1E90FF"
        android:layout_below="@+id/btnAcessar"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/btnAcessar"
        android:layout_alignStart="@+id/btnAcessar"
        android:layout_alignRight="@+id/btnAcessar"
        android:layout_alignEnd="@+id/btnAcessar" />


</RelativeLayout>
