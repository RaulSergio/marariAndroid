<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#EEE9E9"
    tools:context="ucdb.br.sweccamobile.TelaInicial">

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#1E90FF"
        android:layout_height="wrap_content"
        android:text="Bem Vindo(a): "
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6" />

    <TextView
        android:id="@+id/txtUser"
        android:textColor="#778899"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aguardando Nome"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#1E90FF"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtUser"
        android:text="ID: "
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/txtId"
        android:textColor="#778899"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aguardando ID"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <Button
        android:id="@+id/btnClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="38dp"
        android:text="Carteira de clientes" />

    <Button
        android:id="@+id/btnProdutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnClientes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Produtos" />

    <Button
        android:id="@+id/btnPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnProdutos"
        android:layout_marginTop="79dp"
        android:text="Pedidos" />

    <Button
        android:id="@+id/btnAtualiza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPedido"
        android:text="Atualizar"
        android:layout_toRightOf="@+id/btnAjuda"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnAjuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Ajuda" />

</RelativeLayout>
